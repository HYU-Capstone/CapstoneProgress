{% extends "base.j2" %}
{% block title %}New User{% endblock%}
{% block content %}
  <div class="col-md-12">
    <div class="card">
      <div class="header">
        <h4 class="title">User Information</h4>
      </div>
      <div class="content">
        <form>
          <div class="row">
            <div class="col-md-12"></div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" id="user-name" placeholder="Name">
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" id="user-email" placeholder="Email">
              </div>
            </div>
          </div>
          <button type="submit" id="create" class="btn btn-info btn-fill pull-right">Create User</button>
          <div class="clearfix"></div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
{% block script %}
<script>
  window.onload = () => {
    document.getElementById('create').addEventListener('click', (e) => {
      e.preventDefault()
      createUser()
    })
  }
</script>
{% endblock %}
{% block back %}
  <li>
      <a href="/users">
          Back to User List
      </a>
  </li>
{% endblock %}